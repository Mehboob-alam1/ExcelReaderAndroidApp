<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="16dp"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <!-- Filter by Category -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Filter by Category"
            android:textSize="18sp"
            android:textStyle="bold" />


        <RadioGroup
            android:id="@+id/radioGroupCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">


            <RadioButton
                android:textSize="18sp"

                android:layout_weight="1"
                android:id="@+id/radioButtonWord"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Word" />

            <RadioButton
                android:textSize="18sp"
                android:layout_weight="1"
                android:id="@+id/radioButtonPhrases"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phrase" />

            <RadioButton
                android:textSize="18sp"
                android:layout_weight="1"
                android:id="@+id/radioButtonIdioms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Idiom" />
        </RadioGroup>

        <!-- Filter by Tags -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Filter by Tags"
            android:textSize="18sp"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/radioGroupTags"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <RadioButton
                android:textSize="18sp"
                android:layout_weight="1"
                android:id="@+id/radioButtonBusiness"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Business" />

            <RadioButton
                android:textSize="18sp"
                android:layout_weight="1"
                android:id="@+id/radioButtonSports"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sports" />

            <RadioButton
                android:textSize="18sp"
                android:layout_weight="1"
                android:id="@+id/radioButtonCasual"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Casual" />
        </RadioGroup>


        <!-- Buttons -->


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="16dp">


        <Button
            android:id="@+id/btnClearFilters"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:text="Clear Filters" />

        <Button
            android:id="@+id/btnApplyFilter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:text="Apply Filter" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
